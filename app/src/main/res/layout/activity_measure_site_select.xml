<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="fi.aalto.rtda.MeasureSiteSelectActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/side_nav_bar" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/hint_choose_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_choose_site"
        android:layout_below="@id/layout_toolbar"
        android:layout_margin="24dp"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/start_measurement_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/action_start_measurement"
        android:textStyle="bold"
        android:background="#009a9a"
        android:textColor="#d9e5f3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:letterSpacing="0.2" />

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/hint_choose_site"
        android:layout_above="@id/start_measurement_button"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RadioGroup
            android:id="@+id/radio_group_sites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">-->
    <ListView
        android:id="@+id/list_sites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hint_choose_site"
        android:layout_above="@id/start_measurement_button"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
    </ListView>
<!--</RadioGroup>
</ScrollView>-->
</RelativeLayout>
